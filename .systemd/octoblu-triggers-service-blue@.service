[Unit]
Description=octoblu-triggers-service-blue
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=300
Restart=always
ExecStartPre=/bin/sh -c '/usr/bin/docker login \
  --username $(/usr/bin/etcdctl get /docker/quay.io/username) \
  --password $(/usr/bin/etcdctl get /docker/quay.io/password) \
  --email $(/usr/bin/etcdctl get /docker/quay.io/email) \
  quay.io'
ExecStartPre=/usr/bin/etcdctl get /meshblu/host || /usr/bin/echo "etcd did not contain /meshblu/host" && exit 1
ExecStartPre=/usr/bin/etcdctl get /meshblu/port || /usr/bin/echo "etcd did not contain /meshblu/port" && exit 1
ExecStartPre=/usr/bin/etcdctl get /octoblu/triggers-service/blue/port || /usr/bin/echo "etcd did not contain /octoblu/triggers-service/blue/port" && exit 1
ExecStartPre=/usr/bin/etcdctl get /octoblu/triggers-service/blue/docker_url || /usr/bin/echo "etcd did not contain /octoblu/triggers-service/blue/docker_url" && exit 1
ExecStartPre=-/usr/bin/docker rm octoblu-triggers-service-blue-%i
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-triggers-service-blue-%i \
  -e DEBUG=triggers-service* \
  -e FLEETCTL_ENDPOINT=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
  -p $(/usr/bin/etcdctl get /octoblu/triggers-service/blue/port):80 \
  -e MESHBLU_HOST=$(/usr/bin/etcdctl get /meshblu/host) \
  -e MESHBLU_PORT=$(/usr/bin/etcdctl get /meshblu/port) \
  $(/usr/bin/etcdctl get /octoblu/triggers-service/blue/docker_url) \
"

[Install]
WantedBy=multi-user.target

[X-Fleet]
Conflicts=octoblu-triggers-service-blue@*.service
MachineMetadata=Services=true
