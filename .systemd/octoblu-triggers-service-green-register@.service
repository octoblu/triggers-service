[Unit]
Description=Register with vulcand for octoblu-triggers-service-green
BindsTo=octoblu-triggers-service-green@%i.service
After=octoblu-triggers-service-green@%i.service

[Service]
EnvironmentFile=/etc/environment
RemainAfterExit=yes
ExecStart=/bin/sh -c "/usr/bin/echo 'Adding backend, server, and frontend to vulcand' && \
  /usr/bin/docker run --rm octoblu/vctl backend upsert \
    --id octoblu-triggers-service-green \
    --vulcan http://$(/usr/bin/etcdctl get /vulcand/host):8182 && \
  /usr/bin/docker run --rm octoblu/vctl server upsert \
    --id octoblu-triggers-service-green-%i \
    --backend octoblu-triggers-service-green \
    --url http://${COREOS_PUBLIC_IPV4}:$(/usr/bin/etcdctl get /octoblu/triggers-service/green/port) \
    --vulcan http://$(/usr/bin/etcdctl get /vulcand/host):8182 \
"

ExecStop=/bin/sh -c "/usr/bin/echo 'Removing server from vulcand' && \
  /usr/bin/docker run --rm octoblu/vctl server rm --id octoblu-triggers-service-green-%i --vulcan http://$(/usr/bin/etcdctl get /vulcand/host):8182"

[X-Fleet]
X-ConditionMachineOf=octoblu-triggers-service-green@%i.service
